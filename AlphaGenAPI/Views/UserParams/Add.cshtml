@model AlphaGenAPI.Models.UserParams
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
            {
                Text = "Fit",
                Value = "Fit"
            });
    listItems.Add(new SelectListItem
            {
                Text = "Obez",
                Value = "Obez",
                Selected = true
            });
    listItems.Add(new SelectListItem
            {
                Text = "Üçgen",
                Value = "Üçgen"
            });
    listItems.Add(new SelectListItem
            {
                Text = "Ters Üçgen",
                Value = "Ters Üçgen"
            });
}
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Gerekli bilgileri sağlamadığınız için buraya yönlendirildiniz. Lütfen gerekli bilgileri giriniz.</h1>

<h4>Bilgi Giriş Formu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Weight" class="control-label">Kilo(kg)</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lenght" class="control-label">Boy(cm)</label>
                <input asp-for="Lenght" class="form-control" />
                <span asp-validation-for="Lenght" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biceps" class="control-label">Ön Kol Ölçüsü(cm)</label>
                <input asp-for="Biceps" class="form-control" />
                <span asp-validation-for="Biceps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Vücut Tipini Seçiniz:</label>
                @Html.DropDownListFor(model => model.Type , listItems, "--Tip--")
            </div>

            <div class="form-group">
                <input type="submit" value="Kayıt Et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



