@model AlphaGenAPI.Models.UserInApp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Burada salon veya adres değişikliği yapabilirsin. Diğer değişiklikler için alpha@gen.tr mail adresine başvurabilirsin.</h1>

<h4>Lütfen yeni salon ya da adresini gir.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Salon" class="control-label"></label>
                <input asp-for="Salon" class="form-control" />
                <span asp-validation-for="Salon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" value="@Html.DisplayFor(model => model.Adres)" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



